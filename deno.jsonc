{
  "tasks":{
    "npm":"deno run -A build.ts --npm",
    "dev":"deno run -A build.ts --watch",
    "lint": "deno run -A https://deno.land/x/deneslint \"src/**/*.ts\""
  },
  "lint": {
    "files": {
      "include": [
        "src"
      ]
    },
    "rules": {
      "tags": ["recommended"],
      "exclude": ["no-explicit-any"]
    }
  },
}
